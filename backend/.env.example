# Server Configuration
NODE_ENV=production
PORT=10000

# Database Configuration
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/?appName=db
MONGO_MAX_POOL_SIZE=100
MONGO_MIN_POOL_SIZE=20

# Redis Configuration (Required for Production)
REDIS_URL=redis://127.0.0.1:6379

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_at_least_32_chars
JWT_EXPIRE=24h

# Session Configuration
SESSION_SECRET=your_session_secret_here_at_least_32_chars

# Security Settings (Relaxed for CTF UX)
MAX_LOGIN_ATTEMPTS=100
LOGIN_TIMEOUT=1
BCRYPT_ROUNDS=12

# Rate Limiting (Relaxed)
FLAG_SUBMIT_MAX_ATTEMPTS=100
FLAG_SUBMIT_WINDOW=30
FLAG_SUBMIT_COOLDOWN=2

# CORS Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Gmail SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
SMTP_SECURE=true
FROM_EMAIL=your_email@gmail.com
