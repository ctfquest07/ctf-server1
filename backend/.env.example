# CTF Platform Environment Configuration
# Copy this file to .env and configure your settings

# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ctf-platform
MONGO_URI=mongodb://localhost:27017/ctf-platform

# MongoDB Connection Pool Settings (for multiple users)
MONGO_MAX_POOL_SIZE=50
MONGO_MIN_POOL_SIZE=5
MONGO_MAX_IDLE_TIME=30000
MONGO_SERVER_SELECTION_TIMEOUT=5000
MONGO_SOCKET_TIMEOUT=45000
MONGO_HEARTBEAT_FREQUENCY=10000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=1h

# Security Settings
MAX_LOGIN_ATTEMPTS=5
LOGIN_TIMEOUT=15

# Rate Limiting (for multiple users)
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=200
ENABLE_RATE_LIMITING=false

# File Upload Settings
MAX_FILE_SIZE=5242880

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Email Configuration (if needed)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password

# Production Settings
# Set these in production environment
# NODE_ENV=production
# RATE_LIMIT_MAX=100
# ENABLE_RATE_LIMITING=true
